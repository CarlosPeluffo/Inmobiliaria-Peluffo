@model Inmobiliaria_Peluffo.Models.Contrato

@{
    ViewData["Title"] = "Detalle Contrato";
}
<div class="text-center">
    <h1>Detalles</h1>
    <h4>Contrato</h4>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cancelado)
        </dt>
        <dd class = "col-sm-10">
            @{
                if(Model.Cancelado == true){
                    <p>
                        <i class="fas fa-check"></i> Si
                    </p>
                }else{
                    <p>
                        <i class="fas fa-times"></i> No
                    </p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCancelado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCancelado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.Inquilino.Apellido} {Model.Inquilino.Nombre} D.N.I: {Model.Inquilino.Dni}")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.Inmueble.Direccion}. Uso:  {Model.Inmueble.Uso}. Tipo:  {Model.Inmueble.Tipo}")
        </dd>
    </dl>
</div>
<div class="text-center">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id" title="Editar">
        <i class="far fa-edit"></i> Editar
    </a>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index"><i class="far fa-hand-point-left"></i> Volver a la Lista</a>
</div>