@model Inmobiliaria_Peluffo.Models.Contrato

@{
    ViewData["Title"] = "Cancelar Contrato";
}
<div class="text-center">
    <h1>Cancelar</h1>
    <h4>Contrato</h4>
    <h3>¿Está seguro que desea cancelarlo?</h3>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cancelado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cancelado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCancelado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCancelado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InquilinoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InmuebleId)
        </dd>
    </dl>
</div>
<div class="text-center">
    <form asp-action="Cancel">
        <button type="submit" value="Cancelar" class="btn btn-danger">
            <i class="fas fa-times"></i> Cancelar
        </button>
    </form>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index" asp-route-id="@ViewBag.Inmueble">
        <i class="far fa-hand-point-left"></i> Volver a la Lista
    </a>
</div>
