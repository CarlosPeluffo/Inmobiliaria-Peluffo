@model Inmobiliaria_Peluffo.Models.Pago

@{
    ViewData["Title"] = "Editar Pagos";
}
<div class="text-center">
    <h1>Editar</h1>

    <h4>Pago</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" class="form-control" name="ContratoId" value="@ViewBag.Contrato"/>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" asp-route-id=@ViewBag.Contrato>
        <i class="far fa-hand-point-left"></i> Volver a la Lista</a>
</div>

