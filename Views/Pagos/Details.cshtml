@model Inmobiliaria_Peluffo.Models.Pago

@{
    ViewData["Title"] = "Detalles Pagos";
}
<div class="text-center">
    <h1>Detalles</h1>
    <h4>Pago</h4>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NroPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContratoId)
        </dt>
        <dd class = "col-sm-10">
            Detalles:
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contrato.InquilinoId)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.Contrato.Inquilino.Apellido} {Model.Contrato.Inquilino.Apellido}. D.N.I: {Model.Contrato.Inquilino.Dni}")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contrato.Inmueble)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.Contrato.Inmueble.Direccion}. Tipo:  {Model.Contrato.Inmueble.Tipo}")
        </dd>
    </dl>
</div>
<div class="text-center">
<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id" title="Editar">
        <i class="far fa-edit"></i> Editar
    </a>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index" asp-route-id=@ViewBag.Contrato>
        <i class="far fa-hand-point-left"></i> Volver a la Lista</a>
</div>
