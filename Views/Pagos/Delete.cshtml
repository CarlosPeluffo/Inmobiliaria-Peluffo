@model Inmobiliaria_Peluffo.Models.Pago

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Está seguro que desea borrarlo?</h3>
<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NroPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContratoId)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.Contrato.Inquilino.Apellido} {Model.Contrato.Inquilino.Apellido}. D.N.I: {Model.Contrato.Inquilino.Dni}")
            @($"{Model.Contrato.Inmueble.Direccion}. Tipo:  {Model.Contrato.Inmueble.Tipo}")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id=@ViewBag.Contrato>Volver a la Lista</a>
    </form>
</div>
